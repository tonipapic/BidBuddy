<UserControl x:Class="PresentationLayer.Pages.UserPages.MakePaymentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Pages.UserPages"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <GroupBox Header="Odaberite način plaćanja:" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="84" Width="223">
            <Grid>
                <RadioButton x:Name="rbVirmanPayment" Checked="rbVirmanPayment_Checked" Unchecked="rbVirmanPayment_Unchecked" Content="Virmansko plaćanje" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <RadioButton x:Name="rbCardPayment" Checked="rbCardPayment_Checked" Unchecked="rbCardPayment_Unchecked" Content="Plaćanje karticom" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>

            </Grid>
        </GroupBox>
        <GroupBox x:Name="gbPayment" Header="PAYMENT" Margin="10,99,10,10">
            <ContentControl x:Name="ccPayment"/>
        </GroupBox>

    </Grid>
</UserControl>
