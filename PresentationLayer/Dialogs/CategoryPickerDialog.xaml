<Window x:Class="PresentationLayer.Dialogs.CategoryPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.Dialogs"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="CategoryPickerDialog" Height="321" Width="517">
    <Grid>
        <TreeView x:Name="tvCategories" Margin="10,10,10,42" SelectedItemChanged="tvCategories_SelectedItemChanged"/>
        <Button x:Name="btnPick" Content="Odaberi" Click="btnPick_Click" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="79"/>
        <Button x:Name="btnCancel" Content="Odustani" Click="btnCancel_Click" HorizontalAlignment="Right" Margin="0,0,104,10" VerticalAlignment="Bottom" Width="69"/>

    </Grid>
</Window>
